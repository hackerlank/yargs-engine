CC = em++

SDL = -s USE_SDL=2 -s USE_SDL_IMAGE=2 -s USE_SDL_TTF=2  \
-s SDL2_IMAGE_FORMATS='["png"]' --preload-file assets/ \

MORECFLAGS = -s USE_SDL=2 -s \
    USE_SDL_IMAGE=2 -s USE_SDL_TTF=2  -s SDL2_IMAGE_FORMATS='["png"]' -D EMSCRIPTEN -O2 -std=c++11

LDFLAGS = $(SDL) --emrun
EXECUTABLE = Game.html
